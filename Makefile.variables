CC  = icc
CXX = icpc
STD = -std=c++17
# INTEL compiler flags
FLAGS = $(STD) -g3 -pthread -Ofast -xHOST -Wall -m64 -use-intel-optimized-headers
# FLAGS = $(STD) -pthread -g -O3 -Wall
CXXFLAGS = -c $(FLAGS)
INC = -I ../lib -I ../src -I ../tools/FileIO -I ../tools/tinyxml2
LN = -L ../lib -L ../src -L ../tools/FileIO -L ../tools/tinyxml2

LINKER = $(INC) $(LN) -lmd -ltinyxml2
