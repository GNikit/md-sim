CC  = icc
CXX = icpc
STD = -std=c++17
# INTEL compiler flags
FLAGS = $(STD) -pthread -xHOST -use-intel-optimized-headers -m64 -Ofast -Wall -ffinite-math-only
# FLAGS = $(STD) -pthread -O3 -Wall
CXXFLAGS = -c $(FLAGS)
# LIB has to be defined in the Makefile 
# For future reference use 2 variables, one for include one for linker
# in those vars include the flag e.g. INC=-I../bin -I../lib -I../src
LINKER = -I$(LIB) -L$(LIB) -lmd
